{
  "name": "playtime",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.126",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "buffer": "^6.0.3",
    "framer-motion": "^12.23.16",
    "opusscript": "^0.1.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.9.1",
    "react-scripts": "5.0.1",
    "sass": "^1.93.0",
    "socket.io-client": "^4.8.1",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "electron-start": "wait-on http://localhost:3000 && electron .",
    "start": "concurrently \"npm run react-start\" \"npm run electron-start\"",
    "build": "npm run react-build && electron .",
    "dist": "npm run react-build && electron-builder"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "concurrently": "^9.2.1",
    "electron": "^38.1.2",
    "electron-builder": "^22.14.13",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.playtime",
    "productName": "PlayTime",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/electron.js",
      "public/preload.js",
      "public/recorder-worklet.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/win/icon.ico",
      "artifactName": "PlayTime.exe"
    },
    "publish": null,
    "cscLink": null,
    "cscKeyPassword": null
  },
  "description": "Desktop app for talk",
  "author": "Smeruxa"
}
